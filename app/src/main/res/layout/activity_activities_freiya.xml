<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".PackageProfiles.ActivityActivitiesFreiya">

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="375dp"
        android:layout_height="140dp"
        android:layout_below="@+id/card"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/challenge" />

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="bottom|right|center_horizontal|center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:text="       Retos" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateRetos"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/buttonColor"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/toolbar_top_level"
        layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="375dp"
        android:layout_height="136dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCarreraQr"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/race" />

            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="bottom|right|center_horizontal|center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        style="@android:style/Widget.TextView"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="          Carrera Qr" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateRace"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/buttonColor"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="375dp"
        android:layout_height="140dp"
        android:layout_below="@+id/card2"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/imagepregun" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="bottom|right|center_horizontal|center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="151dp"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:text="         Preguntas" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateImg"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/buttonColor"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>