<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageProfiles.ActivityActivitiesFreiya">

<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_top_level"
        layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="326dp"
        android:layout_height="141dp"
        android:layout_below="@+id/card"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/challenge" />

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="start|center_horizontal"
                        android:text="  Retos"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateRetos"
                    android:layout_width="76dp"
                    android:layout_height="33dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="#19ACC7"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="326dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCarreraQr"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/race" />

            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        style="@android:style/Widget.TextView"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Carrera Qr"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateRace"
                    android:layout_width="76dp"
                    android:layout_height="33dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="#19ACC7"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="327dp"
        android:layout_height="142dp"
        android:layout_below="@+id/card2"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:elevation="30dp"
        android:padding="2dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/buttonTextColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card"
            android:layout_alignBottom="@+id/card"
            android:background="@color/buttonTextColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="154dp"
                android:layout_height="144dp"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/imagepregunt" />

            <LinearLayout
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:background="@color/buttonTextColor"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="151dp"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="start|center_horizontal"
                        android:text=" Preguntas"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCreateImg"
                    android:layout_width="76dp"
                    android:layout_height="32dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="#19ACC7"
                    android:text="crear"
                    android:textColor="@color/buttonTextColor" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>