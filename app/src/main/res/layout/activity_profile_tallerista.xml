<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageProfiles.ProfileTallerista.ActivityProfileTallerista">

    <RelativeLayout
        android:background="@drawable/fondo"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Toolbar -->
        <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:background="@drawable/fondotoolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


        <LinearLayout
            android:id="@+id/layoutAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/black"
                android:src="@drawable/iconoback" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="257dp"
            android:layout_marginEnd="33dp"
            android:layout_toEndOf="@+id/layoutPerfil"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="206dp"
            android:layout_height="117dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="94dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            android:visibility="visible"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="373dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/cdSettings"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_below="@+id/cdAtivateActivities"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="113dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/reward" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Insignias"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cdActivities"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="43dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="87dp"
                android:layout_height="106dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/apps" />

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:text="Crear Actividades"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cdAtivateActivities"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="43dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/cdActivities"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="87dp"
                android:layout_height="106dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/futuristic" />

                <TextView
                    android:layout_width="83dp"
                    android:layout_height="45dp"
                    android:text="Usar Actividades"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cdPersistenceActivities"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_below="@+id/cdActivities"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="4dp"
            android:layout_toEndOf="@+id/cdSettings"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="113dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/report" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Revisar Actividades"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-6dp"
            android:text="Edwin Gamboa"
            android:textAlignment="center"
            android:textColor="@color/buttonTextColor"
            android:textSize="24sp" />
    </RelativeLayout>

</ScrollView>



