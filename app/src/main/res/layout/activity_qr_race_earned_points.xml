<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".PackageGameRaceQr.RaceQrEconomy.ActivityQrRaceEarnedPoints">

    <TextView
        android:id="@+id/TextViewQrPointsEarned"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/dancingscript_medium"
        android:gravity="center"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:text="Felicidades has terminado esta carrera Qr"
        app:layout_constraintBottom_toTopOf="@+id/guideline294"
        app:layout_constraintEnd_toStartOf="@+id/guideline271"
        app:layout_constraintStart_toStartOf="@+id/guideline270"
        app:layout_constraintTop_toTopOf="@+id/guideline284" />

    <Button
        android:id="@+id/buttonQrPointsBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#19ACC7"
        android:elevation="13dp"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/guideline301"
        app:layout_constraintEnd_toStartOf="@+id/guideline298"
        app:layout_constraintStart_toStartOf="@+id/guideline299"
        app:layout_constraintTop_toTopOf="@+id/guideline300" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline270"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline271"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline284"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline294"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline298"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline299"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline301"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />
</android.support.constraint.ConstraintLayout>