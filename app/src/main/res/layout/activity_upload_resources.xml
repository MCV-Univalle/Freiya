<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondochalle"
    android:padding="16dp"
    tools:context=".PackageGameChallenge.ActivityUploadResources">

    <Button
        android:id="@+id/buttonUploadCameraImage"
        android:layout_width="321dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#00BCD4"
        android:drawableLeft="@drawable/camera"
        android:text="Enviar Foto"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="320dp"
        android:layout_height="71dp"
        android:layout_below="@+id/buttonUploadCameraImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#00BCD4"
        android:drawableLeft="@drawable/photo"
        android:text="Enviar Imagen"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:id="@+id/buttonUploadVideo"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_below="@+id/buttonUploadImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#00BCD4"
        android:drawableLeft="@drawable/videofile"
        android:text="Enviar Video"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:id="@+id/buttonUploadAudio"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_below="@+id/buttonUploadVideo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#00BCD4"
        android:drawableLeft="@drawable/microphone"
        android:text="Enviar Audio"
        android:textColor="@color/buttonTextColor"
        android:visibility="visible" />

</RelativeLayout>